<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.mediavrog.samples.irr.DefaultRuleEngineActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rating Request will show up below, if DefaultRuleEngine's result is true (play with the controls)."/>

    <net.mediavrog.irr.IntegratedRatingRequestLayout
        android:id="@+id/irr_layout"
        xmlns:irr="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@android:color/holo_blue_dark"
        android:padding="20dp"
        irr:autoEvaluateDefaultRuleEngine="true"
        irr:defaultRuleAppStartCount="10"
        irr:defaultRuleDismissMaxCount="3"
        irr:defaultRuleDismissPostponeDays="7"
        irr:defaultRuleDistinctDays="3"
        irr:feedbackUrl="@string/feedback_url"
        irr:ratingUrl="@string/store_url">

        <RelativeLayout
            android:id="@id/irr_nudge_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="visible">

            <TextView
                android:id="@id/irr_nudge_text"
                style="@style/Irr.Custom.Text"
                android:text="Enjoying Integrated Rating Request?"/>

            <Button
                android:id="@id/irr_nudge_decline_btn"
                style="@style/Irr.Custom.Button"
                android:layout_below="@id/irr_nudge_text"
                android:layout_toLeftOf="@id/irr_nudge_accept_btn"
                android:layout_toStartOf="@id/irr_nudge_accept_btn"
                android:text="Not really"/>

            <Button
                android:id="@id/irr_nudge_accept_btn"
                style="@style/Irr.Custom.Button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/irr_nudge_text"
                android:text="Yes!"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@id/irr_rate_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="gone">

            <TextView
                android:id="@id/irr_rate_text"
                style="@style/Irr.Custom.Text"
                android:text="How about a rating in the app store then?"/>

            <Button
                android:id="@id/irr_rate_decline_btn"
                style="@style/Irr.Custom.Button"
                android:layout_below="@id/irr_rate_text"
                android:layout_toLeftOf="@id/irr_rate_accept_btn"
                android:layout_toStartOf="@id/irr_rate_accept_btn"
                android:text="No, thanks"/>

            <Button
                android:id="@id/irr_rate_accept_btn"
                style="@style/Irr.Custom.Button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/irr_rate_text"
                android:text="Ok, sure."/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@id/irr_feedback_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="visible">

            <TextView
                android:id="@id/irr_feedback_text"
                style="@style/Irr.Custom.Text"
                android:text="Would you mind giving us some feedback?"/>

            <Button
                android:id="@id/irr_feedback_decline_btn"
                style="@style/Irr.Custom.Button"
                android:layout_below="@id/irr_feedback_text"
                android:layout_toLeftOf="@id/irr_feedback_accept_btn"
                android:layout_toStartOf="@id/irr_feedback_accept_btn"
                android:text="No, thanks"/>

            <Button
                android:id="@id/irr_feedback_accept_btn"
                style="@style/Irr.Custom.Button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/irr_feedback_text"
                android:text="Ok, sure."/>
        </RelativeLayout>

    </net.mediavrog.irr.IntegratedRatingRequestLayout>

    <include
        layout="@layout/default_controls_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
